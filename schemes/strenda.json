{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Publication",
  "type": "object",
  "properties": {
    "title": {
      "title": "title",
      "description": "title of the publication",
      "type": "string"
    },
    "doi": {
      "title": "doi",
      "description": "identifier of the publication",
      "type": "string"
    },
    "pmid": {
      "title": "pmid",
      "description": "identifier of the publication as indexed in PubMed",
      "type": "string"
    },
    "author": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Author"
      }
    },
    "experiment": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Experiment"
      }
    }
  },
  "definitions": {
    "Author": {
      "title": "Author",
      "type": "object",
      "properties": {
        "name": {
          "title": "name",
          "description": "name of the author. Nomenclature: Family name initials first name",
          "type": "string"
        },
        "affiliation": {
          "title": "affiliation",
          "description": "name of organizaton, department, city, country",
          "type": "string"
        },
        "email": {
          "title": "email",
          "description": "email address",
          "type": "string"
        },
        "orcid": {
          "title": "orcid",
          "description": "ORCID idenfier",
          "type": "string"
        }
      }
    },
    "Experiment": {
      "title": "Experiment",
      "type": "object",
      "properties": {
        "name": {
          "title": "name",
          "description": "name of the experiment, just for internal purposes",
          "type": "string"
        },
        "assay_type": {
          "title": "assay_type",
          "description": "name of the assay",
          "type": "string"
        },
        "direction_of_assay": {
          "title": "direction_of_assay",
          "type": "string"
        },
        "compound_monitored": {
          "title": "compound_monitored",
          "type": "string"
        },
        "continuously_monitored": {
          "title": "continuously_monitored",
          "description": "selection of the stopping procedure",
          "type": "string"
        },
        "directly_monitored": {
          "title": "directly_monitored",
          "type": "string"
        },
        "protein_assay": {
          "$ref": "#/definitions/ProteinDescription"
        }
      }
    }
  }
}